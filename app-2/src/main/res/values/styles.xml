<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="tel_showText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#FF009ACD</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/rtel_title</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">@dimen/tel_show_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
